<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoodTracker.EditMoodPage">
    <StackLayout Padding="10">
        <Label Text="Edit Mood" FontSize="Large" HorizontalOptions="Center" />

        <Label Text="Date" />
        <DatePicker x:Name="DatePicker" />

        <Label Text="Mood" />
        <Picker x:Name="MoodPicker" Title="Select your mood">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Отличное</x:String>
                    <x:String>Хорошее</x:String>
                    <x:String>Нормальное</x:String>
                    <x:String>Плохое</x:String>
                    <x:String>Ужасное</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Label Text="Notes" />
        <Editor x:Name="NotesEditor" />

        <Button Text="Save Changes" Clicked="OnSaveChangesClicked" />
    </StackLayout>
    
    
    
    
    
