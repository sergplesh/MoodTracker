        <!-- Добавляем кнопку для прокрутки в начало списка -->
        <Button Text="Вернуться в начало списка" 
                VerticalOptions="Center"
                Clicked="OnScrollToTopClicked"
                HeightRequest="35"
                CornerRadius="20"/>

    </StackLayout>
</ContentPage>